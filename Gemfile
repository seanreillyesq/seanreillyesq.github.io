source "https://rubygems.org"

gem "jekyll", "~> 4.3"

group :jekyll_plugins do
  # NOTE: jekyll-sitemap intentionally NOT included
  # Custom sitemap templates provide full control:
  #   sitemap_index.xml    - Master index
  #   sitemap-content.xml  - Pages/posts with hreflang
  #   sitemap-images.xml   - Dynamic header images
  #   sitemap-news.xml     - Google News (posts < 48hrs)
  #   sitemap-archives.xml - Category/tag pages
  # See CLAUDE.md "Sitemap Architecture" section for details
  gem "jekyll-redirect-from"
  gem "jekyll-feed"
  gem "jekyll-archives"
  gem "jekyll-last-modified-at"
  gem "jekyll-paginate-v2"
end
